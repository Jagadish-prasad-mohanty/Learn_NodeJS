<%- include('../includes/start.ejs') %>
    <link rel="stylesheet" href="/css/add-product.css"/>

<%- include('../includes/navigation.ejs') %>

    <main class="main">
        <form class="form" method="POST" action="/admin/edit-product/:productId">
            <div class="input">
                <label for="title"> Title</label>
                <input id="title" type="text" name="title" value="<%= product.title%>"/>
            </div>
            <div class="input">
                <label for="price"> Price</label>
                <input id="price" type="number" name="price" step="0.01" value="<%= product.price%>"/>
            </div>
            <div class="input">
                <label for="imgUrl"> ImgURL</label>
                <input id="imgUrl" type="text" name="imgUrl" value="<%= product.imgUrl%>"/>
            </div>
            <div class="input">
                <label for="description"> Description</label>
                <textarea name="description" id="description" cols="21" rows="5" ><%= product.description%></textarea>
            </div>
                
            <button class="button" type="submit">Update Product</button> 
            <input type="hidden" name="id" value="<%= product.id %>"/>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
    